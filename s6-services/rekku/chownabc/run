#!/command/with-contenv bash
set -e

ABC_USER=abc
ABC_UID=$(id -u "$ABC_USER")
ABC_GID=$(id -g "$ABC_USER")

mkdir -p /config/.config/chromium-rfp || true

# Fix ownership for /config and chromium profile
chown -R "$ABC_UID:$ABC_GID" /config || true
chown -R "$ABC_UID:$ABC_GID" /config/.config/chromium-rfp || true
chmod -R 700 /config/.config || true

echo "[S6 Rekku] Ownership of /config and chromium-rfp set to abc."
