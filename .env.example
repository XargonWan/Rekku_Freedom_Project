# Engine
TRAINER_IDS=telegram_bot:31321637                   # Trainer IDs for each interface, e.g., telegram_bot:123456,discord_bot:789012
PROMPT_LOCATION="Kyoto,Japan"                       # Default location for prompts and plugins
TZ=UTC                                              # Timezone for scheduled events
WEATHER_FETCH_TIME=30                               # Minutes between weather fetches
LOGGING_LEVEL=warn                                  # Log level: debug, info, warn, error
LOGGING_LOGCHAT_LEVEL=warn                          # Minimum level for LogChat notifications: debug, info, warn, error
RESTRICT_ACTIONS=trainer_only                       # Restricts image sending to LLM: on (nobody, including trainer), trainer_only (only trainer), off (everyone)
IMAGE_VERSION=latest-develop                        # Version of the Docker image, update as needed
CORRECTOR_RETRIES=2                                 # Number of times the corrector retries invalid JSON
AWAIT_RESPONSE_TIMEOUT=240                          # Seconds to wait for ChatGPT response before timing out
FAILED_MESSAGE_TEXT="LLM failed"                    # Fallback message when LLM fails to respond or correct response
PLATFORM_BACKUP=linux/amd64                         # Platform that is hosting the RFP (backup container), use linux/amd64 for most systems, or linux/arm64 for ARM systems
HISTORY_DAYS=2                                      # Number of days of AI diary history to include in context (default: 2)
CHAT_HISTORY=10                                     # Number of recent messages to include in chat history (default: 10)

# Persona Manager
PERSONA_ALIASES_TRIGGER=true                        # Activate bot when persona aliases are mentioned in messages
PERSONA_INTERESTS_TRIGGER=true                      # Activate bot when persona interests are mentioned in messages  
PERSONA_LIKES_TRIGGER=false                         # Activate bot when persona likes are mentioned in messages
PERSONA_DISLIKES_TRIGGER=false                      # Activate bot when persona dislikes are mentioned in messages
REACT_WHEN_MENTIONED=ðŸ‘€                             # Emoji to use as reaction when bot is mentioned (leave empty to disable)

# Desktop
WEBVIEW_PORT=5006                           # Port for the webview interface
WEBVIEW_HOST=localhost                      # Host for the webview interface
PASSWORD=rekku                              # Webview (Selkies) basic auth password, abc is default. If unset there will be no auth
ROOT_PASSWORD=rekku                         # Password for the root user in the container, change this to something secure
DISPLAY_WIDTH=1280                          # Width of the display in pixels
DISPLAY_HEIGHT=720                          # Height of the display in pixels
PUID=1000                                   # User ID for the container user, change if necessary
PGID=1000                                   # Group ID for the container user, change if necessary
VNC_PORT=6901                               # Port for the VNC server, change if necessary
SECURE_CONNECTION=0                         # Enable HTTPS for web view (0/1)

# Database
DB_HOST=rfp-db
DB_PORT=3306
EXT_DB_PORT=3306                            # External port for database service
DB_USER=rekku
DB_PASS=rekku
DB_NAME=rekku
DB_ROOT_PASS=rfp_password

